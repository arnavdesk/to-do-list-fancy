<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List!</title>
    <%- style %>
    <link rel="stylesheet" href="/css/layout.css">
</head>

<body>

    <main>
        <div class="app-heading border-bottom-px padding-10px">
            <h1 class="heading"><i class="fas fa-clipboard-list"></i> TODO App</h1>
        </div>

        <form action="/add-task" method="POST">
            <div class="task-input border-bottom-px padding-10px">
                <h4 class="subheadings"> Task Description</h4>
                <input type="text" name="task" id="task-desc" placeholder="What do you need to do?" required>
            </div>

            <div class="task-details border-bottom-px">

                <div class="basic-details">
                    <div class="category-div padding-10px">
                        <h4 class="subheadings">Category</h4>
                        <select name="category" id="task-category" required>
                            <option value="">Choose Category : </option>
                            <option value="College">College</option>
                            <option value="Home">Home</option>
                            <option value="Work">Work</option>
                            <option value="Gym">Gym</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="due-div padding-10px">
                        <h4 class="subheadings ">Due Date</h4>
                        <input type="date" name="date" id="due-date" required>
                    </div>

                </div>
                <!-- <div class="extended-details">

            </div> -->
            </div>


            <div class="actions border-bottom-px padding-10px">
                <button class="center-align max-width-item" id="add" type="submit"><i class="fas fa-plus"></i> ADD
                    TASK</button>
                <button onclick="location.href='/delete-all'" class="center-align max-width-item" id="delete-all"
                    type="button">
                    <i class="far fa-trash-alt"></i> DELETE ALL
                </button>
                <button onclick="location.href='/delete-completed'" class="center-align max-width-item"
                    id="delete-completed" type="button"> <i class="fas fa-check"></i> DELETE
                    COMPLETED</button>
            </div>
        </form>

        <div class="task-container border-bottom-px padding-10px">
            <ul id="item-list">
                <%- body %>
            </ul>
        </div>


    </main>


    <script src="https://kit.fontawesome.com/c2e4f2d141.js" crossorigin="anonymous"></script>
    <script src="/js/layout.js"></script>

    <%- script %>
</body>

</html>